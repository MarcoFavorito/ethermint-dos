<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE tsung SYSTEM "/usr/share/tsung/tsung-1.0.dtd" []>
<tsung loglevel="warning">

  <clients>
    <client host="localhost" cpu="2" maxusers="30000000"/>
  </clients>

  <servers>
    <server host="localhost" port="46607" type="tcp"/>
    <server host="localhost" port="46617" type="tcp"/>
    <server host="localhost" port="46627" type="tcp"/>
    <!--
    NOTICE: This node is byzantine when you run the evil network
      Depending on the version of Tendermint Evil, it might make no sense to send request to it
    -->
    <!--<server host="localhost" port="46637" type="tcp"/>-->
  </servers>

  <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users arrivalrate="20" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="2" duration="1" unit="minute">
      <users arrivalrate="100" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="3" duration="1" unit="minute">
      <users arrivalrate="250" unit="second"/>
    </arrivalphase>
  </load>

  <sessions>
  <session name="app_event" weight="9" type="ts_http">
    <setdynvars sourcetype="random_string" length="20">
        <var name="randstring"/>
    </setdynvars>
    <request subst="true">
      <http url='/broadcast_tx_commit?tx="%%_randstring%%"'
         method="GET"
        />
    </request>
  </session>
</sessions>

</tsung>
